<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Application Forms & Results - RankSaarthi</title>
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .forms-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            /* Force 3 columns */
            gap: 20px;
            margin-top: 40px;
        }

        .column-card {
            background: rgba(255, 255, 255, 0.8);
            border-radius: var(--radius-md);
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.6);
            height: fit-content;
        }

        .column-header {
            padding: 15px;
            text-align: center;
            font-weight: 700;
            font-size: 1.2rem;
            color: white;
            text-transform: uppercase;
        }

        /* Distinct Colors for Columns */
        .header-result {
            background: #e74c3c;
        }

        .header-admit {
            background: #3498db;
        }

        .header-jobs {
            background: #27ae60;
        }

        .link-list {
            padding: 0;
            list-style: none;
            margin: 0;
        }

        .link-item {
            border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        }

        .link-item:last-child {
            border-bottom: none;
        }

        .link-item a {
            display: block;
            padding: 12px 15px;
            color: var(--color-secondary);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.95rem;
            transition: background 0.2s;
        }

        .link-item a:hover {
            background: rgba(var(--color-primary-rgb), 0.1);
            color: var(--color-primary);
            padding-left: 20px;
            /* Slight slide effect */
        }

        @media (max-width: 900px) {
            .forms-grid {
                grid-template-columns: 1fr;
                /* Stack on mobile */
            }
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <%- include('partials/header') %>

            <div class="container" style="padding-top: 40px; padding-bottom: 60px;">
                <div style="text-align: center; margin-bottom: 40px;">
                    <h1 class="hero-title" style="font-size: 2.5rem;">Sarkari Updates</h1>
                    <p class="hero-subtitle">Latest Results, Admit Cards, and Job Notifications</p>
                </div>

                <div class="forms-grid">
                    <!-- Column 1: Result -->
                    <div class="column-card glass-card">
                        <div class="column-header header-result">Result</div>
                        <ul class="link-list">
                            <% if (updates.Result && updates.Result.length> 0) { %>
                                <% updates.Result.forEach(item=> { %>
                                    <li class="link-item">
                                        <a href="<%= item.url %>" target="_blank">
                                            <%= item.title %>
                                        </a>
                                    </li>
                                    <% }); %>
                                        <% } else { %>
                                            <li class="link-item"
                                                style="padding: 15px; text-align: center; color: #999;">No updates</li>
                                            <% } %>
                        </ul>
                    </div>

                    <!-- Column 2: Admit Card -->
                    <div class="column-card glass-card">
                        <div class="column-header header-admit">Admit Card</div>
                        <ul class="link-list">
                            <% if (updates['Admit Card'] && updates['Admit Card'].length> 0) { %>
                                <% updates['Admit Card'].forEach(item=> { %>
                                    <li class="link-item">
                                        <a href="<%= item.url %>" target="_blank">
                                            <%= item.title %>
                                        </a>
                                    </li>
                                    <% }); %>
                                        <% } else { %>
                                            <li class="link-item"
                                                style="padding: 15px; text-align: center; color: #999;">No updates</li>
                                            <% } %>
                        </ul>
                    </div>

                    <!-- Column 3: Latest Jobs -->
                    <div class="column-card glass-card">
                        <div class="column-header header-jobs">Latest Jobs</div>
                        <ul class="link-list">
                            <% if (updates['Latest Jobs'] && updates['Latest Jobs'].length> 0) { %>
                                <% updates['Latest Jobs'].forEach(item=> { %>
                                    <li class="link-item">
                                        <a href="<%= item.url %>" target="_blank">
                                            <%= item.title %>
                                        </a>
                                    </li>
                                    <% }); %>
                                        <% } else { %>
                                            <li class="link-item"
                                                style="padding: 15px; text-align: center; color: #999;">No updates</li>
                                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>

            <%- include('partials/footer') %>
    </div>
</body>

</html>