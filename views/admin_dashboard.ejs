<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/main.css">

    <style>
        .admin-section {
            margin-bottom: 40px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin-bottom: 15px;
        }

        .full-width {
            grid-column: 1 / -1;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
            border-radius: 8px;
            overflow: hidden;
        }

        th,
        td {
            padding: 12px;
            border: 1px solid rgba(0, 0, 0, 0.05);
            text-align: left;
        }

        th {
            background: rgba(var(--color-primary-rgb), 0.1);
            color: var(--color-primary);
            font-weight: 700;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            text-align: center;
            border-bottom: 4px solid var(--color-primary);
        }

        .stat-card h4 {
            color: var(--color-text-muted);
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1px;
        }

        .stat-card p {
            font-size: 2rem;
            font-weight: 800;
            color: var(--color-secondary);
            margin-top: 5px;
        }

        .tab-nav {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

        .tab-link {
            cursor: pointer;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 600;
            color: var(--color-text-muted);
        }

        .tab-link.active {
            background: var(--color-primary);
            color: white;
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <header class="main-header glass-card">
            <div class="logo-container">RankSaarthi Analytics</div>
            <div style="display: flex; gap: 15px; align-items: center;">
                <button onclick="window.location.reload()" class="btn btn-secondary"
                    style="padding: 5px 15px; font-size: 0.85rem; display: flex; align-items: center; gap: 5px;">
                    <span style="font-size: 1.1rem;">üîÑ</span> Refresh Data
                </button>
                <a href="/admin/export-csv" class="btn btn-primary" style="padding: 5px 15px; font-size: 0.9rem;">Export
                    CSV</a>
                <a href="/admin/logout" class="btn btn-secondary"
                    style="padding: 5px 15px; font-size: 0.9rem;">Logout</a>
            </div>
        </header>

        <div class="container">
            <!-- Global Overview -->
            <div class="stats-grid">
                <div class="stat-card">
                    <h4>Users Parsed</h4>
                    <p>
                        <%= globalStats.totalParticipants %>
                    </p>
                </div>
                <div class="stat-card">
                    <h4>Avg Score</h4>
                    <p>
                        <%= globalStats.avgScore.toFixed(2) %>
                    </p>
                </div>
                <div class="stat-card">
                    <h4>Active Exams</h4>
                    <p>
                        <%= globalStats.totalExams %>
                    </p>
                </div>
            </div>



            <!-- Analysis Section -->
            <div class="glass-card admin-section">
                <h3 style="color: var(--color-primary); margin-bottom: 20px;">üìä Data Analysation</h3>

                <h4 style="margin-top: 20px;">Exam Performance</h4>
                <table>
                    <thead>
                        <tr>
                            <th>Exam Name</th>
                            <th>Participants</th>
                            <th>Avg Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% examStats.forEach(s=> { %>
                            <tr>
                                <td>
                                    <a href="/admin/exam/<%= s.id %>"
                                        style="color: var(--color-primary); font-weight: 700; text-decoration: none;">
                                        <%= s.name %> ‚ûî
                                    </a>
                                </td>
                                <td>
                                    <%= s.participants %>
                                </td>
                                <td>
                                    <%= s.avg_score ? s.avg_score.toFixed(2) : '0.00' %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

                <h4 style="margin-top: 30px;">Shift Analysis (Toughness Check)</h4>
                <p style="font-size: 0.85rem; color: var(--color-text-muted);">Lower Avg Score typically indicates a
                    tougher shift.</p>
                <table>
                    <thead>
                        <tr>
                            <th>Exam Date</th>
                            <th>Shift / Time</th>
                            <th>Atempted By</th>
                            <th>Avg Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let currentExam='' ; %>
                            <% shiftStats.forEach(s=> { %>
                                <% if (s.exam_name !==currentExam) { currentExam=s.exam_name; %>
                                    <tr style="background: rgba(0,0,0,0.05);">
                                        <td colspan="4"
                                            style="font-weight: 800; color: var(--color-primary); text-transform: uppercase; font-size: 0.85rem;">
                                            üéØ <a href="/admin/exam/<%= exam_id_map[currentExam] %>"
                                                style="color: inherit; text-decoration: underline;">
                                                <%= currentExam %>
                                            </a>
                                        </td>
                                    </tr>
                                    <% } %>
                                        <tr>
                                            <td>
                                                <%= s.exam_date %>
                                            </td>
                                            <td>
                                                <%= s.exam_shift %>
                                            </td>
                                            <td>
                                                <%= s.count %> students
                                            </td>
                                            <td style="font-weight: 700; color: var(--color-primary);">
                                                <%= s.avg_score.toFixed(2) %>
                                            </td>
                                        </tr>
                                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Management Tools -->
            <div class="glass-card admin-section">
                <h3>Management Tools</h3>
                <div class="tab-nav">
                    <div class="tab-link active" onclick="showPanel('exams')">Manage Exams</div>
                    <div class="tab-link" onclick="showPanel('data')">Manage Rank Data</div>
                </div>

                <div id="exams-panel">
                    <form action="/admin/add-exam" method="POST" style="margin-top: 20px;">
                        <div class="form-grid">
                            <input type="text" name="name" placeholder="Exam Name (e.g. SSC MTS)" required
                                style="padding: 8px;">
                            <input type="text" name="category" placeholder="Category (SSC, Railway)" required
                                style="padding: 8px;">
                            <input type="number" name="total_questions" placeholder="Total Questions" required
                                style="padding: 8px;">
                            <input type="number" step="0.01" name="marks_per_question" placeholder="Marks/Q (+ve)"
                                required style="padding: 8px;">
                            <input type="number" step="0.01" name="negative_marks" placeholder="Negative Marks" required
                                style="padding: 8px;">
                        </div>
                        <button type="submit" class="btn btn-primary">Add Exam</button>
                    </form>
                    <table style="margin-top: 20px;">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Total Q</th>
                            <th>Marks</th>
                            <th>Action</th>
                        </tr>
                        <% exams.forEach(function(exam) { %>
                            <tr>
                                <td>
                                    <%= exam.id %>
                                </td>
                                <td>
                                    <a href="/admin/exam/<%= exam.id %>"
                                        style="color: var(--color-primary); font-weight: 700;">
                                        <%= exam.name %>
                                    </a>
                                </td>
                                <td>
                                    <%= exam.category %>
                                </td>
                                <td>
                                    <%= exam.total_questions %>
                                </td>
                                <td>+<%= exam.marks_per_question %> / -<%= exam.negative_marks %>
                                </td>
                                <td>
                                    <form action="/admin/delete-exam" method="POST"
                                        onsubmit="return confirm('Are you sure you want to delete this exam? All student data will be lost forever.');"
                                        style="display:inline;">
                                        <input type="hidden" name="exam_id" value="<%= exam.id %>">
                                        <button type="submit"
                                            style="background: none; border: none; cursor: pointer; color: #e74c3c; font-weight: bold;">
                                            üóëÔ∏è Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </table>
                </div>

                <div id="data-panel" style="display:none;">
                    <form action="/admin/add-rank-data" method="POST" style="margin-top: 20px;">
                        <div class="form-grid">
                            <select name="exam_id" required style="padding: 8px;" class="full-width">
                                <% exams.forEach(function(exam) { %>
                                    <option value="<%= exam.id %>">
                                        <%= exam.name %>
                                    </option>
                                    <% }); %>
                            </select>
                            <input type="number" step="0.01" name="min_score" placeholder="Min Score" required
                                style="padding: 8px;">
                            <input type="number" step="0.01" name="max_score" placeholder="Max Score" required
                                style="padding: 8px;">
                            <input type="number" name="min_rank" placeholder="Min Rank" required style="padding: 8px;">
                            <input type="number" name="max_rank" placeholder="Max Rank" required style="padding: 8px;">
                            <select name="cutoff_probability" style="padding: 8px;">
                                <option value="High">High</option>
                                <option value="Medium">Medium</option>
                                <option value="Low">Low</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Add Rank Data</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Containers for JS -->
    <script type="application/json" id="stats-data">
        <%- JSON.stringify(examCategoryStats) %>
    </script>
    <script type="application/json" id="shift-stats-data">
        <%- JSON.stringify(shiftStats) %>
    </script>

    <script>
        function showPanel(id) {
            document.getElementById('exams-panel').style.display = id === 'exams' ? 'block' : 'none';
            document.getElementById('data-panel').style.display = id === 'data' ? 'block' : 'none';
            document.querySelectorAll('.tab-link').forEach(l => l.classList.remove('active'));
            if (event) event.target.classList.add('active');
        }

        // --- DATA INJECTION ---
        const statsData = document.getElementById('stats-data').textContent;
        const stats = JSON.parse(statsData);

        const shiftStatsDataRaw = document.getElementById('shift-stats-data').textContent;
        const shiftStatsData = JSON.parse(shiftStatsDataRaw);



        // Auto-refresh every 60 seconds to keep data "Real-time"
        setTimeout(() => {
            window.location.reload();
        }, 60000);
    </script>
</body>

</html>