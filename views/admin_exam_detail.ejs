<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <style>
        .detail-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        .back-btn {
            text-decoration: none;
            color: var(--color-primary);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            text-align: center;
            border-top: 4px solid var(--color-primary);
        }

        .stat-card h4 {
            color: var(--color-text-muted);
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1px;
        }

        .stat-card p {
            font-size: 1.8rem;
            font-weight: 800;
            color: var(--color-secondary);
            margin-top: 5px;
        }

        .analysis-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: var(--shadow-md);
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th,
        td {
            padding: 12px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            text-align: left;
        }

        th {
            color: var(--color-text-muted);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
        }

        .high-score {
            color: #2ecc71;
            font-weight: 700;
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <header class="main-header glass-card">
            <div class="logo-container">Exam Deep-Dive</div>
            <a href="/admin/dashboard" class="btn btn-secondary" style="padding: 5px 15px; font-size: 0.9rem;">Back to
                Dashboard</a>
        </header>

        <div class="container">
            <div class="detail-header">
                <h2 style="color: var(--color-primary);">
                    <%= exam.name %> Analysis
                </h2>
            </div>

            <!-- Key Metrics -->
            <div class="stats-grid">
                <div class="stat-card">
                    <h4>Total Participants</h4>
                    <p>
                        <%= categoryStats.reduce((acc, curr)=> acc + curr.count, 0) %>
                    </p>
                </div>
                <div class="stat-card">
                    <h4>Average Score</h4>
                    <p>
                        <% const totalPart=categoryStats.reduce((acc, curr)=> acc + curr.count, 0);
                            const weightedSum = categoryStats.reduce((acc, curr) => acc + (curr.avg_score * curr.count),
                            0);
                            const realAvg = totalPart > 0 ? (weightedSum / totalPart) : 0;
                            %>
                            <%= realAvg.toFixed(2) %>
                    </p>
                </div>
                <div class="stat-card">
                    <h4>Highest Score</h4>
                    <p class="high-score">
                        <%= Math.max(...categoryStats.map(s=> s.topper_score), 0).toFixed(2) %>
                    </p>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
                <!-- Category Breakdown -->
                <div class="analysis-card">
                    <h3 style="margin-bottom: 15px; border-left: 4px solid var(--color-accent); padding-left: 10px;">
                        Category Breakdown</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Count</th>
                                <th>Avg Score</th>
                                <th>Topper</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categoryStats.forEach(s=> { %>
                                <tr>
                                    <td><strong>
                                            <%= s.category %>
                                        </strong></td>
                                    <td>
                                        <%= s.count %>
                                    </td>
                                    <td>
                                        <%= s.avg_score.toFixed(2) %>
                                    </td>
                                    <td class="high-score">
                                        <%= s.topper_score.toFixed(2) %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Shift Breakdown -->
                <div class="analysis-card">
                    <h3 style="margin-bottom: 15px; border-left: 4px solid var(--color-secondary); padding-left: 10px;">
                        Shift Analysis</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Shift</th>
                                <th>Students</th>
                                <th>Avg Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% shiftStats.forEach(s=> { %>
                                <tr>
                                    <td>
                                        <%= s.exam_date %> (<%= s.exam_shift %>)
                                    </td>
                                    <td>
                                        <%= s.count %>
                                    </td>
                                    <td style="font-weight: 700; color: var(--color-primary);">
                                        <%= s.avg_score.toFixed(2) %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <% if (zoneStats.length> 0) { %>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
                    <!-- Zone Breakdown -->
                    <div class="analysis-card">
                        <h3 style="margin-bottom: 15px; border-left: 4px solid #2ecc71; padding-left: 10px;">Zone
                            Breakdown (Railway)</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>RRB Zone</th>
                                    <th>Students</th>
                                    <th>Avg Score</th>
                                    <th>Topper</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% zoneStats.forEach(s=> { %>
                                    <tr>
                                        <td><strong>
                                                <%= s.zone %>
                                            </strong></td>
                                        <td>
                                            <%= s.count %>
                                        </td>
                                        <td>
                                            <%= s.avg_score.toFixed(2) %>
                                        </td>
                                        <td class="high-score">
                                            <%= s.topper_score.toFixed(2) %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Category Wise Zone Analysis -->
                    <div class="analysis-card">
                        <h3 style="margin-bottom: 15px; border-left: 4px solid #f1c40f; padding-left: 10px;">Category
                            Wise Zone Rank (Real-time)</h3>
                        <div style="max-height: 400px; overflow-y: auto;">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Zone</th>
                                        <th>Category</th>
                                        <th>Avg Score</th>
                                        <th>Count</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categoryZoneStats.forEach(s=> { %>
                                        <tr>
                                            <td>
                                                <%= s.zone %>
                                            </td>
                                            <td><strong>
                                                    <%= s.category %>
                                                </strong></td>
                                            <td>
                                                <%= s.avg_score.toFixed(2) %>
                                            </td>
                                            <td>
                                                <%= s.count %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% } %>

                    <!-- Student Data Table -->
                    <div class="analysis-card">
                        <h3 style="margin-bottom: 20px;">Top 100 Students</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Name</th>
                                    <th>Roll No</th>
                                    <th>Category</th>
                                    <th>State</th>
                                    <th>Zone</th>
                                    <th>Score</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% studentResults.forEach((s, index)=> { %>
                                    <tr>
                                        <td>#<%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= s.name %>
                                        </td>
                                        <td>
                                            <% if (s.roll_no && s.roll_no !=='N/A' ) { %>
                                                <a href="/admin/student/<%= s.id %>"
                                                    style="color: var(--color-primary); font-weight: 700; text-decoration: none;">
                                                    <%= s.roll_no %>
                                                </a>
                                                <% } else { %>
                                                    <%= s.roll_no %>
                                                        <% } %>
                                        </td>
                                        <td>
                                            <%= s.category %>
                                        </td>
                                        <td>
                                            <%= s.state %>
                                        </td>
                                        <td>
                                            <%= s.zone || 'N/A' %>
                                        </td>
                                        <td class="high-score">
                                            <%= s.total_score.toFixed(2) %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Marks Distribution Table -->
                    <div class="card">
                        <div
                            style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
                            <h2>ðŸ“Š Marks Distribution (Category-wise)</h2>
                            <div style="display: flex; gap: 10px;">
                                <button onclick="downloadDistributionImage()" class="btn btn-primary"
                                    style="font-size: 0.9rem; padding: 8px 16px;">Download as JPG</button>
                                <button onclick="window.print()" class="btn btn-secondary"
                                    style="font-size: 0.9rem; padding: 8px 16px;">Download as PDF</button>
                            </div>
                        </div>

                        <div id="marks-distribution-table" style="overflow-x: auto;">
                            <table class="data-table">
                                <thead>
                                    <tr
                                        style="background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));">
                                        <th style="color: white;">Marks (â‰¥)</th>
                                        <% categories.forEach(cat=> { %>
                                            <th style="color: white;">
                                                <%= cat %>
                                            </th>
                                            <% }) %>
                                                <th style="color: white; background: rgba(0,0,0,0.2);">TOTAL</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% marksDistribution.forEach((row, index)=> { %>
                                        <tr style="<%= index % 2 === 0 ? 'background: #f8f9fa;' : '' %>">
                                            <td style="font-weight: 700; color: var(--color-primary);">
                                                <%= row.score.toFixed(2) %>
                                            </td>
                                            <% categories.forEach(cat=> { %>
                                                <td style="text-align: center;">
                                                    <%= row[cat] || 0 %>
                                                </td>
                                                <% }) %>
                                                    <td
                                                        style="text-align: center; font-weight: 700; background: rgba(var(--color-primary-rgb), 0.1);">
                                                        <%= row.TOTAL || 0 %>
                                                    </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <p
                            style="margin-top: 15px; font-size: 0.85rem; color: var(--color-text-muted); font-style: italic;">
                            * This table shows cumulative count of students who scored greater than or equal to the
                            specified marks.
                        </p>
                    </div>
        </div>
    </div>

    <script>
        async function downloadDistributionImage() {
            const element = document.getElementById('marks-distribution-table');
            const canvas = await html2canvas(element, {
                scale: 2,
                useCORS: true,
                backgroundColor: '#ffffff'
            });
            const link = document.createElement('a');
            link.download = 'Marks-Distribution-<%= exam.name.replace(/\s+/g, ' - ') %>.jpg';
            link.href = canvas.toDataURL('image/jpeg', 0.95);
            link.click();
        }
    </script>
</body>

</html>