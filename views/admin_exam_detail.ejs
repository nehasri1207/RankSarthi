<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/variables.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .detail-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        .back-btn {
            text-decoration: none;
            color: var(--color-primary);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 20px;
            border-radius: 12px;
            box-shadow: var(--shadow-sm);
            text-align: center;
            border-top: 4px solid var(--color-primary);
        }

        .stat-card h4 {
            color: var(--color-text-muted);
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1px;
        }

        .stat-card p {
            font-size: 1.8rem;
            font-weight: 800;
            color: var(--color-secondary);
            margin-top: 5px;
        }

        .analysis-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: var(--shadow-md);
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        th,
        td {
            padding: 12px;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            text-align: left;
        }

        th {
            color: var(--color-text-muted);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
        }

        .high-score {
            color: #2ecc71;
            font-weight: 700;
        }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <header class="main-header glass-card">
            <div class="logo-container">Exam Deep-Dive</div>
            <a href="/admin/dashboard" class="btn btn-secondary" style="padding: 5px 15px; font-size: 0.9rem;">Back to
                Dashboard</a>
        </header>

        <div class="container">
            <div class="detail-header">
                <h2 style="color: var(--color-primary);">
                    <%= exam.name %> Analysis
                </h2>
            </div>

            <!-- Key Metrics -->
            <div class="stats-grid">
                <div class="stat-card">
                    <h4>Total Participants</h4>
                    <p>
                        <%= categoryStats.reduce((acc, curr)=> acc + curr.count, 0) %>
                    </p>
                </div>
                <div class="stat-card">
                    <h4>Average Score</h4>
                    <p>
                        <% const totalPart=categoryStats.reduce((acc, curr)=> acc + curr.count, 0);
                            const weightedSum = categoryStats.reduce((acc, curr) => acc + (curr.avg_score * curr.count),
                            0);
                            const realAvg = totalPart > 0 ? (weightedSum / totalPart) : 0;
                            %>
                            <%= realAvg.toFixed(2) %>
                    </p>
                </div>
                <div class="stat-card">
                    <h4>Highest Score</h4>
                    <p class="high-score">
                        <%= Math.max(...categoryStats.map(s=> s.topper_score), 0).toFixed(2) %>
                    </p>
                </div>
            </div>

            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
                <!-- Category Breakdown -->
                <div class="analysis-card">
                    <h3 style="margin-bottom: 15px; border-left: 4px solid var(--color-accent); padding-left: 10px;">
                        Category Breakdown</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Category</th>
                                <th>Count</th>
                                <th>Avg Score</th>
                                <th>Topper</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categoryStats.forEach(s=> { %>
                                <tr>
                                    <td><strong>
                                            <%= s.category %>
                                        </strong></td>
                                    <td>
                                        <%= s.count %>
                                    </td>
                                    <td>
                                        <%= s.avg_score.toFixed(2) %>
                                    </td>
                                    <td class="high-score">
                                        <%= s.topper_score.toFixed(2) %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

                <!-- Shift Breakdown -->
                <div class="analysis-card">
                    <h3 style="margin-bottom: 15px; border-left: 4px solid var(--color-secondary); padding-left: 10px;">
                        Shift Analysis</h3>
                    <table>
                        <thead>
                            <tr>
                                <th>Shift</th>
                                <th>Students</th>
                                <th>Avg Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% shiftStats.forEach(s=> { %>
                                <tr>
                                    <td>
                                        <%= s.exam_date %> (<%= s.exam_shift %>)
                                    </td>
                                    <td>
                                        <%= s.count %>
                                    </td>
                                    <td style="font-weight: 700; color: var(--color-primary);">
                                        <%= s.avg_score.toFixed(2) %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <% if (zoneStats.length> 0) { %>
                <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px;">
                    <!-- Zone Breakdown -->
                    <div class="analysis-card">
                        <h3 style="margin-bottom: 15px; border-left: 4px solid #2ecc71; padding-left: 10px;">Zone
                            Breakdown (Railway)</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>RRB Zone</th>
                                    <th>Students</th>
                                    <th>Avg Score</th>
                                    <th>Topper</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% zoneStats.forEach(s=> { %>
                                    <tr>
                                        <td><strong>
                                                <%= s.zone %>
                                            </strong></td>
                                        <td>
                                            <%= s.count %>
                                        </td>
                                        <td>
                                            <%= s.avg_score.toFixed(2) %>
                                        </td>
                                        <td class="high-score">
                                            <%= s.topper_score.toFixed(2) %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Category Wise Zone Analysis -->
                    <div class="analysis-card">
                        <h3 style="margin-bottom: 15px; border-left: 4px solid #f1c40f; padding-left: 10px;">Category
                            Wise Zone Rank (Real-time)</h3>
                        <div style="max-height: 400px; overflow-y: auto;">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Zone</th>
                                        <th>Category</th>
                                        <th>Avg Score</th>
                                        <th>Count</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% categoryZoneStats.forEach(s=> { %>
                                        <tr>
                                            <td>
                                                <%= s.zone %>
                                            </td>
                                            <td><strong>
                                                    <%= s.category %>
                                                </strong></td>
                                            <td>
                                                <%= s.avg_score.toFixed(2) %>
                                            </td>
                                            <td>
                                                <%= s.count %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <% } %>

                    <!-- Student Data Table -->
                    <div class="analysis-card">
                        <h3 style="margin-bottom: 20px;">Top 100 Students</h3>
                        <table>
                            <thead>
                                <tr>
                                    <th>Rank</th>
                                    <th>Name</th>
                                    <th>Roll No</th>
                                    <th>Category</th>
                                    <th>State</th>
                                    <th>Zone</th>
                                    <th>Score</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% const maskData=(str, type)=> {
                                    if (!str || str === 'N/A' || str === 'Manual User') return str;
                                    if (str.length <= 2) return str; if (type==='name' ) { const parts=str.split(' ');
                                        return parts.map(p => p[0] + ' *'.repeat(Math.max(0, p.length - 2)) +
                                        (p.length> 1 ? p[p.length - 1] : '')).join(' ');
                                        }
                                        return str[0] + '*'.repeat(str.length - 2) + str[str.length - 1];
                                        };
                                        %>
                                        <% studentResults.forEach((s, index)=> { %>
                                            <tr>
                                                <td>#<%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= maskData(s.name, 'name' ) %>
                                                </td>
                                                <td>
                                                    <%= maskData(s.roll_no, 'roll' ) %>
                                                </td>
                                                <td>
                                                    <%= s.category %>
                                                </td>
                                                <td>
                                                    <%= s.state %>
                                                </td>
                                                <td>
                                                    <%= s.zone || 'N/A' %>
                                                </td>
                                                <td class="high-score">
                                                    <%= s.total_score.toFixed(2) %>
                                                </td>
                                            </tr>
                                            <% }) %>
                            </tbody>
                        </table>
                    </div>
        </div>
    </div>
</body>

</html>